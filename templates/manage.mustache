<h3 class="mt-5 text-center">Task Need To Do</h3>

<table class="table table-hover table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col" class="text-center">ID</th>
            <th scope="col" class="text-center" colspan="3">Title</th>
            <th scope="col" class="text-center" colspan="8">Description</th>
            <th scope="col" class="text-center" colspan="2">Actions</th> <!-- Set desired width -->
        </tr>
    </thead>
    <tbody>
        {{#tasks}}
        <tr>
            <td class="text-center">{{id}}</td>
            <td class="text-center" colspan="3">{{task_title}}</td>
            <td class="text-center" colspan="8">{{task_description}}</td>
            <td class="text-center" colspan="2"> <!-- Set desired width -->
                <a href="{{editurl}}/?id={{id}}" class="btn btn-info">Edit</a>
                <button id="delete-btn-{{id}}" class="btn btn-danger delete-btn">Delete</button>
            </td>
        </tr>
        {{/tasks}}
    </tbody>
</table>

<div class="text-center mt-5 pt-5">
    <a href="{{editurl}}" class="btn btn-primary">Add New Task</a>
</div>
